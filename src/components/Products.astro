---
const appliancesImages = [
  '/assets/asian-products00.webp',
  '/assets/asian-products01.webp',
  '/assets/asian-products02.webp',
];

const groceriesImages = [
  '/assets/asian-groceries00.webp',
  '/assets/asian-groceries01.webp',
  '/assets/asian-groceries02.webp',
];
---



<section class=" flex justify-center items-center flex-col w-full bg-gray-50 font-raleway" id="aboutus">
  <div class="flex max-lg:flex-col-reverse items-center justify-center max-w-7xl  px-6 py-14">
    <div class="relative w-[40%] max-lg:w-[90%]  aspect-[3/2] p-[50px] max-lg:p-[0px]  overflow-hidden rounded-lg slider slider1">
      {appliancesImages.map((img, i) => (
        <img
          src={img}
          class={`rounded-lg object-cover w-full  appliances ${i === 0 ? 'active' : ''}`}
          alt="Asian Appliance"
        />
      ))}
    </div>

    <div class="w-[50%] max-lg:w-[90%] p-[50px] max-lg:p-[0px]">
      <h2 class="text-[30px] font-semibold mb-4 max-lg:mt-4">Asian Appliances</h2>
      <p class="text-gray-900 text-[16px] leading-relaxed mb-6">
        Our mission is to offer the most authentic and superior quality appliances imported directly from Japan, Korea and other parts of Asia! Come visit us and take a look at Asian appliances ranging from Japanese rice cookers and Matcha tea sets to Korean BBQ grills and stone bowls/pots.
      </p>
      <p class="text-sm italic font-bold text-black pb-[16px]">
        CHECK OUT OUR NEWEST ADDITION <br />
        JAPANESE ANIME AND BT21 MERCHANDISES <a href="#" class="text-cyan-900 underline">HERE</a>
      </p>
    </div>
  </div>

  <div class="w-full bg-white flex justify-center ">

<div class="flex items-center max-lg:flex-col justify-center max-w-7xl px-6 py-14">
  <div class="w-[50%] max-lg:w-[90%] p-[50px] max-lg:p-[0px]">
    <h2 class="text-[30px] font-semibold mb-4 max-lg:mt-4">Asian Groceries</h2>
    <p class="text-gray-700 text-[16px] leading-relaxed mb-6">
      Our mission is to bring the most popular and authentic products from Japan, Korea and other parts of Asia. Come visit us and take a look at products ranging from most popular brands Japanese snacks and beverages to most popular brands Korean spices like Gochujang and many more. Also be sure to check out the homemade Korean side dishes!
    </p>
  </div>
  <div class="relative w-[40%] max-lg:w-[90%] aspect-[3/2] p-[50px] max-lg:p-[0px]  overflow-hidden rounded-lg slider slider2">
    {groceriesImages.map((img, i) => (
      <img
        src={img}
        class={`object-cover w-full h-fit  rounded-lg groceries ${i === 0 ? 'active' : ''}`}
        alt="Asian Grocery"
      />
    ))}
  </div>
  
</div>
</section>

<script defer>
  let index1 = 0;
  let index2 = 0;

  setInterval(() => {
    const slides1 = document.querySelectorAll('.slider1 img');
    const slides2 = document.querySelectorAll('.slider2 img');

    slides1.forEach((img, i) => img.classList.toggle('active', i === index1));
    slides2.forEach((img, i) => img.classList.toggle('active', i === index2));

    index1 = (index1 + 1) % slides1.length;
    index2 = (index2 + 1) % slides2.length;
  }, 3000);
</script>
