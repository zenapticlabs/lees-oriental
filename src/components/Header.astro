<header
  class="z-1000 fixed top-0 text-white py-[18px] px-6 w-full transition-all duration-300"
  id="site-header"
>
  <div class="max-w-[1400px] mx-auto flex justify-between items-center">
    <div class="text-[26px] font-normal tracking-wide playfair cursor-pointer">
      LEE&apos;S ORIENTAL
    </div>
    <div class="hidden max-lg:block w-[40px] h-[40px]">
      <button type="button" class="navbar-toggle" id="nav-bar">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <button
        type="button"
        class="hidden h-[40px] cursor-pointer scale-110"
        id="cancel"
      >
        <img src="/assets/cancel.svg" alt="cancel" />
      </button>
    </div>
    <nav
      class="space-x-6 text-[16px] max-lg:hidden font-semibold tracking-wide font-montserrat"
    >
      <a
        href="#about"
        class="hover:text-gray-300 hover:border-b-[1px] whitespace-nowrap hover:border-gray-500 pb-[3px] transition"
        >About Us</a
      >
      <a
        href="#hours"
        class="hover:text-gray-300 hover:border-b-[1px] whitespace-nowrap hover:border-gray-500 pb-[3px] transition"
        >Hours</a
      >
      <a
        href="#location"
        class="hover:text-gray-300 hover:border-b-[1px] whitespace-nowrap hover:border-gray-500 pb-[3px] transition"
        >Location</a
      >
      <a
        href="#anime"
        class="hover:text-gray-300 hover:border-b-[1px] whitespace-nowrap hover:border-gray-500 pb-[3px] transition"
        >Anime/BT21/Daiso</a
      >
      <a
        href="#new"
        class="hover:text-gray-300 hover:border-b-[1px] whitespace-nowrap hover:border-gray-500 pb-[3px] transition"
        >New Items</a
      >
      <a
        href="#gallery"
        class="hover:text-gray-300 hover:border-b-[1px] whitespace-nowrap hover:border-gray-500 pb-[3px] transition"
        >Store Gallery</a
      >
      <a
        href="#contact"
        class="hover:text-gray-300 hover:border-b-[1px] whitespace-nowrap hover:border-gray-500 pb-[3px] transition"
        >Contact Us</a
      >
    </nav>
  </div>

  <nav
    class="fixed right-0 top-[70px] transition-all z-[10000000] bg-[#000000] w-0 overflow-hidden"
    id="menu"
    style="height:calc(100vh)"
  >
    <div class="absolute inset-0">
      <div class="relative flex flex-col justify-between h-[85%]">
        <div
          class="w-full font-montserrat text-white overflow-hidden flex flex-col gap-5 justify-start items-between z-10 px-[24px] py-[40px]"
        >
          <a
            href="/#aboutus"
            class="border-b-[1px] whitespace-nowrap border-gray-500 pb-[4px] text-[18px] font-semibold leading-[150%] text-start pt-2 w-full cursor-pointer"
            id="about"
            onclick="document.getElementById('menu').style.display='none';document.body.style.overflow = 'auto';document.getElementById('icon').src=document.body.classList.contains('dark') ? '/assets/list-dark.svg' : '/assets/list-light.svg'"
          >
            About Us
          </a>
          <a
            href="/#techSolutionsSection"
            class="border-b-[1px] whitespace-nowrap border-gray-500 pb-[4px] text-[18px] font-semibold leading-[150%] text-start pt-2 w-full cursor-pointer"
            id="services"
            onclick="document.getElementById('menu').style.display='none';document.body.style.overflow = 'auto';document.getElementById('icon').src=document.body.classList.contains('dark') ? '/assets/list-dark.svg' : '/assets/list-light.svg'"
          >
            Hours
          </a>
          <a
            href="/#realworldsolutions"
            class="border-b-[1px] whitespace-nowrap border-gray-500 pb-[4px] text-[18px] font-semibold leading-[150%] text-start pt-2 w-full cursor-pointer"
            id="caseStudies"
            onclick="document.getElementById('menu').style.display='none';document.body.style.overflow = 'auto';document.getElementById('icon').src=document.body.classList.contains('dark') ? '/assets/list-dark.svg' : '/assets/list-light.svg'"
          >
            Location
          </a>
          <a
            href="/#tellusabout"
            class="border-b-[1px] whitespace-nowrap border-gray-500 pb-[4px] text-[18px] font-semibold leading-[150%] text-start pt-2 w-full cursor-pointer"
            id="contact"
            onclick="document.getElementById('menu').style.display='none';document.body.style.overflow = 'auto';document.getElementById('icon').src=document.body.classList.contains('dark') ? '/assets/list-dark.svg' : '/assets/list-light.svg'"
          >
            Anime/BT21/Daiso
          </a>
          <a
            href="/#tellusabout"
            class="border-b-[1px] whitespace-nowrap border-gray-500 pb-[4px] text-[18px] font-semibold leading-[150%] text-start pt-2 w-full cursor-pointer"
            id="contact"
            onclick="document.getElementById('menu').style.display='none';document.body.style.overflow = 'auto';document.getElementById('icon').src=document.body.classList.contains('dark') ? '/assets/list-dark.svg' : '/assets/list-light.svg'"
          >
            New Items
          </a>
          <a
            href="/#tellusabout"
            class="border-b-[1px] whitespace-nowrap border-gray-500 pb-[4px] text-[18px] font-semibold leading-[150%] text-start pt-2 w-full cursor-pointer"
