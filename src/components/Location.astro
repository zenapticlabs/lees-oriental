---
const address = {
  line: "3240 University Ave, Madison WI 53705",
  note: "Conveniently located in the heart of West Madison, in Shoredwood Shopping Center",
  mapEmbedSrc: "https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2886.664986523056!2d-89.44518782430018!3d43.07565897113805!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x8807ac5d9820a6b7%3A0x148be62ffc80f39!2sLee's%20Oriental%20LLC!5e0!3m2!1sen!2sus!4v1718010893307!5m2!1sen!2sus"
};

---

<section class="flex flex-col items-center px-4 py-12 bg-white text-center font-raleway" id="location">
  <h2 class="text-3xl font-semibold text-gray-800 mb-2">Our Address</h2>
  <p class="text-[16px] italic text-gray-600">{address.line}</p>
  <p class="text-gray-500 mt-2 mb-6">{address.note}</p>
  <div class="w-full rounded-[16px] overflow-hidden shadow-[16px]">
    <iframe
      src={address.mapEmbedSrc}
      width="100%"
      height="450"
      allowfullscreen=""
      loading="lazy"
      referrerpolicy="no-referrer-when-downgrade"
      class="w-full border-0 z-1"
    ></iframe>
  </div>
</section>
